<%- include('_layouts/header') -%>
<main>
    <section>
        <h1>Contact Us!</h1>
        <form method="POST" action="/contact" enctype="multipart/form-data">
            <div class="form-field">
                <label for="mypic">Photo:</label>
                <input type="file" class="form-input" name="mypic" id="mypic">
                <label for="name">Name:</label>
                <input type="text" class="form-input" name="name">
            </div>
            <div class="form-field">
                <label for="phone">Phone:</label>
                <input type="text" class="form-input" name="phone">
            </div>
            <div class="form-field">
                <label for="confirmphone">Confirm Phone:</label>
                <input type="text" class="form-input" name="confirmphone">
            </div>
            <div class="form-field">
                <label for="qty">Quantity of apples:</label>
                <input type="text" class="form-input" name="qty">
            </div>
            <div class="form-field">
                <label for="message">Message:</label>
                <textarea id="message" name="message"></textarea>
            </div>
            <div class="form-field">
                <input type="submit" class="form-submit" value="Submit">
            </div>
        </form>
        <% 
            if(typeof errors !== 'undefined'){
                for(var error of errors){
                    %>
                    <h3><%= error.msg %></h3>
                    <%
                }
            }
        %>
    </section>
</main>
<script>
    ClassicEditor
        .create( document.querySelector( '#message' ) )
        .catch( error => {
            console.error( error );
        } );
</script>
<%- include('_layouts/footer') -%>